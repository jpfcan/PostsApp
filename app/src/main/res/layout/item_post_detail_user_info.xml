<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_normal"
    android:paddingBottom="@dimen/margin_intermediate_large"
    android:paddingStart="@dimen/text_size_normal"
    android:paddingEnd="@dimen/text_size_normal" >

    <TextView
        android:id="@+id/post_info_user_username"
        style="@style/DetailTitleStyle"
        tools:text="User: jpfcan"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            style="@style/DetailTitleStyle"
            android:textSize="@dimen/text_size_normal_large"
            android:text="@string/name_title"/>

        <TextView
            android:id="@+id/post_info_user_name"
            style="@style/DetailTextStyle"
            android:layout_marginStart="@dimen/margin_small"
            android:textSize="@dimen/text_size_normal_large"
            android:maxLines="1"
            tools:text="Juan Pablo Fajardo Cano"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            style="@style/DetailTitleStyle"
            android:textSize="@dimen/text_size_normal_large"
            android:text="@string/email_title"/>

        <TextView
            android:id="@+id/post_info_user_email"
            style="@style/DetailTextStyle"
            android:layout_marginStart="@dimen/margin_small"
            android:textSize="@dimen/text_size_normal_large"
            android:maxLines="1"
            tools:text="juan@fajardo.co"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            style="@style/DetailTitleStyle"
            android:textSize="@dimen/text_size_normal_large"
            android:text="@string/phone_title"/>

        <TextView
            android:id="@+id/post_info_user_phone"
            style="@style/DetailTextStyle"
            android:layout_marginStart="@dimen/margin_small"
            android:textSize="@dimen/text_size_normal_large"
            android:maxLines="1"
            tools:text="+57 333 555 2332"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            style="@style/DetailTitleStyle"
            android:textSize="@dimen/text_size_normal_large"
            android:text="@string/website_title"/>

        <TextView
            android:id="@+id/post_info_user_website"
            style="@style/DetailTextStyle"
            android:layout_marginStart="@dimen/margin_small"
            android:textSize="@dimen/text_size_normal_large"
            android:maxLines="1"
            tools:text="Juan Pablo Fajardo Cano"/>

    </LinearLayout>

</LinearLayout>