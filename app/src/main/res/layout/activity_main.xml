<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/text_view_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xxxxlarge"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_xxlarge"
        android:text="@string/app_name"/>

    <ImageView
        android:id="@+id/bus_stop_icon"
        android:layout_width="@dimen/splash_icon_size"
        android:layout_height="@dimen/splash_icon_size"
        android:layout_below="@+id/text_view_app_title"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_connections" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_view"
        android:layout_width="@dimen/dots_loader_size"
        android:layout_height="@dimen/dots_loader_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_below="@+id/bus_stop_icon"
        app:lottie_rawRes="@raw/dots_loader"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

</RelativeLayout>